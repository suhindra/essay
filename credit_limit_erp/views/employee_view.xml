<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_employee_form_credit_limit" model="ir.ui.view">
            <field name="name">hr.employee_form_credit_limit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Credit Limit Approval">
                        <group>
                            <field name="credit_limit_approve_amount"/>
                            <field name="overdue_credit_approve"/>
                            <field name="recommend"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>