<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_partner_subdisct_form" model="ir.ui.view">
            <field name="name">res.partner.subdistrict_id.2</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="city_id" position="before">
                    <field name="subdistrict_id"
                        options="{'create_name_field': 'subdistrict', 'no_open': True, 'no_create': True}"
                        placeholder="Kecamatan"
                        class="oe_edit_only" />
                </field>
                <xpath expr="//field[@name='child_ids']/form//field[@name='city_id']" position="before">
                    <field name="subdistrict_id"
                        options="{'create_name_field': 'subdistrict_id', 'no_open': True, 'no_create': True}"
                        placeholder="Kecamatan"
                        class="oe_edit_only" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
