<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="alisan_city_form">
            <field name="name">res.alisan.city.form</field>
            <field name="model">res.alisan.city</field>
            <field name="arch" type="xml">
                <form string="ZIP">
                    <group col="4">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="alisan_city_tree">
            <field name="name">res.alisan.city.tree</field>
            <field name="model">res.alisan.city</field>
            <field name="arch" type="xml">
                <tree string="ZIP">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>

        <record id="view_alisan_city_filter" model="ir.ui.view">
            <field name="name">res.alisan.city.select</field>
            <field name="model">res.alisan.city</field>
            <field name="arch" type="xml">
                <search string="Search city">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id"/>
                        <group expand="0" string="Group By">
                            <filter string="State" domain="[]" context="{'group_by':'state_id'}"/>
                        </group>
                </search>
            </field>
        </record>

        <record id="action_city_tree" model="ir.actions.act_window">
            <field name="name">Kota/Kabupaten</field>
            <field name="res_model">res.alisan.city</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field ref="alisan_city_tree" name="view_id"/>
            <field name="search_view_id" ref="view_alisan_city_filter"/>
        </record>

    </data>
</openerp>
