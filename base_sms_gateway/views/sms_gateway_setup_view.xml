<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="sms_gateway_configuration" model="ir.ui.view">
            <field name="name">SMS Gateway Configuration</field>
            <field name="model">sms.gateway.config.settings</field>
            <field name="arch" type="xml">
                <form string="SMS Gateway configuration" class="oe_form_configuration">
                    <header>
                        <button string="Save" type="object"
                            name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object"
                            name="cancel" class="oe_link"/>
                    </header>
                    <group string="SMS Gateway configuration">
                        <label for="sms_template" string="SMS Template"/>
                        <div>
                            <div>
                                <field name="sms_template"/>
                            </div>
                        </div>
                        <label for="user_key" string="User Key"/>
                        <div>
                            <div>
                                <field name="user_key"/>
                            </div>
                        </div> 
                        <label for="pass_key" string="Password Key"/>
                        <div>
                            <div>
                                <field name="pass_key"/>
                            </div>
                        </div>
                        <label for="send_sms_api" string="Send SMS API"/>
                        <div>
                            <div>
                                <field name="send_sms_api"/>
                            </div>
                        </div>
                        <label for="status_sms_api" string="SMS Status API"/>
                        <div>
                            <div>
                                <field name="status_sms_api"/>
                            </div>
                        </div>
                        <label for="credit_api" string="SMS Credit API"/>
                        <div>
                            <div>
                                <field name="credit_api"/>
                            </div>
                        </div>
                    </group>
                    <group string="SMS Gateway Notification">
                        <label for="notification_number" string="Notification Number"/>
                        <div>
                            <div>
                                <field name="notification_number"/>
                            </div>
                        </div>
                        <label for="notification_text" string="Notification Text"/>
                        <div>
                            <div>
                                <field name="notification_text"/>
                            </div>
                        </div> 
                        <label for="credit_limit" string="Credit Limit"/>
                        <div>
                            <div>
                                <field name="credit_limit"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="sms_gateway_settings_action" model="ir.actions.act_window">
            <field name="name">SMS Gateway Configuration</field>
            <field name="res_model">sms.gateway.config.settings</field>
            <field name="view_id" ref="sms_gateway_configuration"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

    </data>
</openerp>