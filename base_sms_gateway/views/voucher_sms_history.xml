<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="voucher_sms_history_form" model="ir.ui.view">
            <field name="name">voucher.sms.history.form</field>
            <field name="model">res.voucher</field>
            <field name="inherit_id" ref="base_voucher.voucher_form"/>
            <field name="arch" type="xml">

            <xpath expr="//page[@name='scan_barcode']" position="after">
                <page string="SMS History">
                    <field name="sms_ids" nolabel="1">
                        <tree string="Holidays"
                            editable="none">
                            <field name="message_id" readonly="True"/>
                            <field name="to" readonly="True"/>
                            <field name="sending_status" readonly="True"/>
                            <field name="text" readonly="True"/>
                            <field name="create_date" readonly="True"/>
                            <button name="action_resend_sms" string="Resend SMS" type="object" help="Resend SMS" />
                        </tree>
                    </field>
                </page>
            </xpath>

            </field>
        </record> 
    </data>
</openerp>