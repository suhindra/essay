<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="alisan_giro_list" model="ir.ui.view">
            <field name="name">alisan_giro_list</field>
            <field name="model">alisan.giro</field>
            <field name="arch" type="xml">
                <tree string="Giro List">
                    <field name='name' />
                    <field name='due_date' />
                    <field name='journal_id' />
                    <field name='type' />
                    <field name='receive_date' />
                    <field name='clearing_date' />
                    <field name='amount' />
                    <field name='partner_id' />
                    <field name='state' />
                </tree>
            </field>
        </record>


        <record id="alisan_giro_form" model="ir.ui.view">
            <field name="name">alisan_giro_form</field>
            <field name="model">alisan.giro</field>
            <field name="arch" type="xml">
                <form string="Form Giro">

                    <header>
                        <button string="Confirm" icon="" states="draft" type="object" name="action_confirm" class="oe_highlight"/>
                        <button string="Clearing" icon="" states="open" type="object" name="action_clearing" class="oe_highlight"/>
                        <button string="Cancel" icon="" states="open" type="object" name="action_cancel"/>
                        <button string="Reject" icon="" states="open" type="object" name="action_reject"/>

                        <field name="state" widget="statusbar"/>

                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name='name' />
                                <field name='bank_name' />
                                <field name='type' />
                                <field name='invoice_type' invisible="1" />
                                <field name='partner_id' />
                            </group>
                            <group>
                                <field name='due_date' />
                                <field name='receive_date' />
                                <field name='clearing_date' />
                                <field name='amount' />
                            </group>
                        </group>

                        <notebook colspan="4">
                            <page string="Invoices">
                                <field name="giro_invoice_ids">
                                    <tree string="Invoices" editable="bottom">
                                        <field name="invoice_id"
                                               domain="[('partner_id','=', parent.partner_id),('state','=','open'),
                                               ('type','=',parent.invoice_type)]"/>
                                        <field name ="sales_order_id"/>                                              
                                        <field name="amount_invoice"  />
                                        <field name="amount"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <group>
                                        <field name="giro_line_sum" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                        <field name="giro_amount_remain" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="alisan_giro_filter" model="ir.ui.view">
            <field name="name">giro.filter</field>
            <field name="model">alisan.giro</field>
            <field name="arch" type="xml">
                <search string="Search Giro">
                    <field name="name"/>
                    <field name="due_date"/>
                    <field name='journal_id' />
                    <field name='type' />
                    <field name='receive_date' />
                    <field name='clearing_date' />
                    <field name='partner_id' />
                    <field name='state' />

                    <filter name="due_today" string="Due Today"
                            domain="[('due_date','=', time.strftime('%Y-%m-%d') )]"/>

                    <group expand="0" string="Group By">
                        <filter string="Journal" icon="terp-camera_test"
                                name="journal_id" context="{'group_by':'journal_id'}"/>
                        <filter string="Type" icon="terp-camera_test"
                                name="type" context="{'group_by':'type'}"/>
                        <filter string="Partner" icon="terp-camera_test"
                                name="partner_id" context="{'group_by':'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</openerp>