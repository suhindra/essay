<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="tree_partners_extra">
            <field name="name">res.partner.extend.field</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='phone']" position="before">
                    	<field name="overdue_sms" />
                        <field name="mobile" /> 
                    </xpath>
                </data>
            </field>
        </record>
        
        <!-- overdue sms Field on partner Form -->
		<record id="partner_show_overduesms" model="ir.ui.view">
            <field name="name">res.partner.extend.field.form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" /> 
			<field name="arch" type="xml">
				<field name="category_id" position="after">
					<field name="overdue_sms" />
				</field>
			</field>
		</record>
		
    </data>
</openerp>