<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="sms_gateway_configuration" model="ir.ui.view">
            <field name="name">SMS Gateway Configuration</field>
            <field name="model">sms.gateway.config.settings</field>
            <field name="arch" type="xml">
                <form string="SMS Gateway configuration" class="oe_form_configuration">
                    <header>
                        <button string="Save" type="object"
                            name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object"
                            name="cancel" class="oe_link"/>
                    </header>
                    <group string="SMS Gateway configuration">
                        <label for="send_ordered" string=""/>
                        <div>
                            <div>
                                <field name="send_ordered"/>
                            </div>
                        </div>
                        <label for="ordered_sms_template" string="Ordered SMS Template"/>
                        <div>
                            <div>
                                <field name="ordered_sms_template"/>
                            </div>
                        </div>
                        <label for="send_invoiced" string=""/>
                        <div>
                            <div>
                                <field name="send_invoiced"/>
                            </div>
                        </div>
                        <label for="invoiced_sms_template" string="Invoiced SMS Template"/>
                        <div>
                            <div>
                                <field name="invoiced_sms_template"/>
                            </div>
                        </div>
                        <label for="send_shipped" string=""/>
                        <div>
                            <div>
                                <field name="send_shipped"/>
                            </div>
                        </div>
                        <label for="shipped_sms_template" string="Shipped SMS Template"/>
                        <div>
                            <div>
                                <field name="shipped_sms_template"/>
                            </div>
                        </div>
                        <label for="take_away_sms_template"/>
                        <div>
                            <div>
                                <field name="take_away_sms_template"/>
                            </div>
                        </div>
                        <label for="arrival_true_sms_template"/>
                        <div>
                            <div>
                                <field name="arrival_true_sms_template"/>
                            </div>
                        </div>
                        <label for="delivery_sms_template"/>
                        <div>
                            <div>
                                <field name="delivery_sms_template"/>
                            </div>
                        </div>
                        <label for="payment_overdue_sms_template"/>
                        <div>
                            <div>
                                <field name="payment_overdue_sms_template"/>
                            </div>
                        </div>
                        <label for="repeat_interval_number"/>
                        <div>
                            <div>
                                <field name="repeat_interval_number"/>
                            </div>
                        </div>
                        <label for="interval_number"/>
                        <div>
                            <div>
                                <field name="interval_number"/>
                            </div>
                        </div>
                        <label for="user_key" string="User Key"/>
                        <div>
                            <div>
                                <field name="user_key"/>
                            </div>
                        </div> 
                        <label for="pass_key" string="Password Key"/>
                        <div>
                            <div>
                                <field name="pass_key"/>
                            </div>
                        </div>
                        <label for="send_sms_api" string="Send SMS API"/>
                        <div>
                            <div>
                                <field name="send_sms_api"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="sms_gateway_settings_action" model="ir.actions.act_window">
            <field name="name">SMS Gateway Configuration</field>
            <field name="res_model">sms.gateway.config.settings</field>
            <field name="view_id" ref="sms_gateway_configuration"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem 
            id="menu_sms_gateway" 
            name="SMS Gateway"
            parent="account.menu_finance" 
            sequence="30" />
        <menuitem 
            id="sms_gateway_settings_menu" 
            name="SMS Gateway Configuration"
            parent="menu_sms_gateway" 
            action="base_sms_gateway_erp.sms_gateway_settings_action"
            sequence="10"/>
        
    </data>
</openerp>